<!DOCTYPE html>
<html lang="en">

<%- include('templates/head', {}) %>

    <body>
        <%- include('templates/navbar', {}) %>
            <main>
                <%- include('templates/formProducts')%>
                    <%- include('templates/tableProducts', {}) %>
                        <%- include('templates/formChats', {}) %>

                            <script src="/socket.io/socket.io.js"></script>
                            <script>
                                const socket = io();

                                socket.on("message_back", (data) => {
                                    console.log(data);
                                    render(data);

                                    socket.emit("message_client", "Hola servidor!");
                                });

                                socket.on("message_back_table", (data) => {
                                    console.log(data);
                                    renderTable(data);
                                    socket.emit("message_client_table", "Hola servidor!");
                                });

                                const render = (data) => {
                                    console.log('dataHome', data)
                                    let html = data
                                        .map((x) => {
                                            return `
                        <p class='m-0 pnm'><strong>${x.name}</strong> : ${x.msn}</p>
                        <p class='small psmall'> <strong>${x.date}</strong> </p>
                    `
                                        })
                                        .join(" ");

                                    document.querySelector("#chats").innerHTML = html;

                                };

                                const renderTable = (data) => {
                                    let tr = data
                                        .map((i) => {
                                            return `
                    <tr>
                        <th scope="row">ID</th>
                        <td>${i.title}</td>
                        <td>${i.price}</td>
                        <td>
                            <img src="${i.thumbnail}" alt="" style='width: 2rem; heigth: 5vh'>
                        </td>
                    </tr>
                    `
                                        })
                                        .join(" ");

                                    document.querySelector("#idTbody").innerHTML = tr;
                                };

                                const addMsn = () => {
                                    const fecha = new Date()
                                    const dia = fecha.getDate()
                                    const mes = fecha.getMonth() + 1
                                    const anio = fecha.getFullYear()
                                    const hora = fecha.getHours()
                                    const minutos = fecha.getMinutes()
                                    const segundos = fecha.getSeconds()

                                    let obj = {
                                        name: document.querySelector("#nb").value,
                                        msn: document.querySelector("#msn").value,
                                        date: `Fecha: ${dia}/${mes}/${anio} / Hora: ${hora}:${minutos}:${segundos}`
                                    }
                                    socket.emit("data_client", obj)

                                    document.querySelector("#msn").value = "";
                                    document.querySelector("#nb").disabled = true;
                                    return false
                                }

                                const addTrTable = () => {

                                    let obj = {
                                        title: document.querySelector("#title").value,
                                        price: document.querySelector("#price").value,
                                        thumbnail: document.querySelector("#thumbnail").value
                                    }
                                    socket.emit("data_client_table", obj)

                                    document.querySelector("#title").value = "";
                                    document.querySelector("#price").value = "";
                                    document.querySelector("#thumbnail").value = ""
                                    return false
                                }
                            </script>

                            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                                crossorigin="anonymous"></script>
    </body>

</html>